{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "next",
    "plugin:jest/recommended",
    "eslint:recommended",
    // always put prettier at last
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["jest"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    //add customize rules here as per your project's needs
    "import/extensions": "off",
    "import/no-anonymous-default-export": "off",
    "@next/next/no-page-custom-font": "off"
  },
  "root": true
}
